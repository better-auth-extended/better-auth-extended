{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["GITHUB_APP_ID", "GITHUB_APP_PRIVATE_KEY"]
    },
    "clean": {},
    "format": {},
    "lint": {},
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "typecheck": {
      "outputs": [],
      "cache": true
    }
  }
}
